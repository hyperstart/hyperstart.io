{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "rootDirs": ["src"],
    "paths": {
      "src/*": ["src/*"],
      "lib": ["src/lib"],
      "lib/*": ["src/lib/*"],
      "api": ["src/api.ts"],
      "editor": ["src/editor/api.ts"],
      "logger": ["src/logger/api.ts"],
      "projects": ["src/projects/api.ts"],
      "users": ["src/users/api.ts"]
    },
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
